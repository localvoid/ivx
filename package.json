{
  "private": true,
  "version": "0.2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint --format codeFrame --project ./tsconfig.json",
    "clean": "make clean",
    "build": "make build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^10.1.0",
    "codecov": "^3.0.2",
    "husky": "^1.0.0-rc.4",
    "ivi-tslint-rules": "^0.1.4",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.6",
    "tslib": "^1.9.1",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
